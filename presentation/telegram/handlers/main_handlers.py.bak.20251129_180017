@main_router.callback_query(F.data.startswith("subscription:"))
async def subscription_action_handler(callback: CallbackQuery):
    """–î–µ–π—Å—Ç–≤–∏—è –ø–æ–¥–ø–∏—Å–∫–∏ ‚Äî –ò–°–ü–†–ê–í–õ–ï–ù–û"""
    action = callback.data.split(":")[1]
    logger.info(f"üéØ –î–µ–π—Å—Ç–≤–∏–µ –ø–æ–¥–ø–∏—Å–∫–∏ '{action}' –æ—Ç {callback.from_user.id}")
    
    # ‚úÖ –ò–°–ü–†–ê–í–õ–ï–ù–û: meta –≤–º–µ—Å—Ç–æ details
    try:
        audit_db.log_action(
            user_id=callback.from_user.id,
            action=f"subscription_{action}",
            meta={"callback": callback.data}  # ‚úÖ meta
        )
    except Exception as e:
        logger.warning(f"‚ö†Ô∏è –ù–µ —É–¥–∞–ª–æ—Å—å –∑–∞–ø–∏—Å–∞—Ç—å –≤ –∞—É–¥–∏—Ç: {e}")
    
    if action == "buy":
        text = "üí≥ *–í—ã–±–µ—Ä–∏—Ç–µ —Ç–∞—Ä–∏—Ñ –ø–æ–¥–ø–∏—Å–∫–∏:*"
        await callback.message.edit_text(text, reply_markup=get_subscription_plans_keyboard(), parse_mode="Markdown")
    elif action == "stats":
        text = (
            "üìä *–°—Ç–∞—Ç–∏—Å—Ç–∏–∫–∞ –∏—Å–ø–æ–ª—å–∑–æ–≤–∞–Ω–∏—è:*\n\n"
            "‚Ä¢ –°–æ–∑–¥–∞–Ω–æ –¥–æ–∫—É–º–µ–Ω—Ç–æ–≤: *0*\n"
            "‚Ä¢ –î–æ—Å—Ç—É–ø–Ω–æ –¥–æ–∫—É–º–µ–Ω—Ç–æ–≤: *10*\n" 
            "‚Ä¢ –¢–∞—Ä–∏—Ñ: *–ë–µ—Å–ø–ª–∞—Ç–Ω—ã–π*\n"
            "‚Ä¢ –°—Ä–æ–∫ –ø–æ–¥–ø–∏—Å–∫–∏: *–Ω–µ –∞–∫—Ç–∏–≤–Ω–∞*"
        )
        await callback.message.edit_text(text, reply_markup=get_back_keyboard(), parse_mode="Markdown")
    await callback.answer()

@main_router.callback_query(F.data.startswith("subscription_plan:"))
async def subscription_plan_handler(callback: CallbackQuery):
    """–í—ã–±–æ—Ä —Ç–∞—Ä–∏—Ñ–∞ ‚Äî –ò–°–ü–†–ê–í–õ–ï–ù–û"""
    plan = callback.data.split(":")[1]
    plan_names = {
        "basic": "üü¢ –ë–∞–∑–æ–≤—ã–π (299‚ÇΩ/–º–µ—Å)",
        "pro": "üîµ –ü—Ä–æ (599‚ÇΩ/–º–µ—Å)",
        "premium": "üü£ –ü—Ä–µ–º–∏—É–º (999‚ÇΩ/–º–µ—Å)"
    }
    logger.info(f"üéØ –í—ã–±–æ—Ä —Ç–∞—Ä–∏—Ñ–∞ '{plan}' –æ—Ç {callback.from_user.id}")
    
    # ‚úÖ –ò–°–ü–†–ê–í–õ–ï–ù–û: meta –≤–º–µ—Å—Ç–æ details
    try:
        audit_db.log_action(
            user_id=callback.from_user.id,
            action=f"select_plan_{plan}",
            meta={"plan": plan}  # ‚úÖ meta
        )
    except Exception as e:
        logger.warning(f"‚ö†Ô∏è –ù–µ —É–¥–∞–ª–æ—Å—å –∑–∞–ø–∏—Å–∞—Ç—å –≤ –∞—É–¥–∏—Ç: {e}")
    
    text = f"üí≥ *–í—ã–±—Ä–∞–Ω —Ç–∞—Ä–∏—Ñ:* {plan_names[plan]}\n\n‚öôÔ∏è –§—É–Ω–∫—Ü–∏—è –æ–ø–ª–∞—Ç—ã –Ω–∞—Ö–æ–¥–∏—Ç—Å—è –≤ —Ä–∞–∑—Ä–∞–±–æ—Ç–∫–µ..."
    await callback.message.edit_text(text, reply_markup=get_back_keyboard(), parse_mode="Markdown")
    await callback.answer(f"üí≥ {plan_names[plan]}")

# ===== FALLBACK –û–ë–†–ê–ë–û–¢–ß–ò–ö =====
@main_router.message()
async def unknown_message_handler(message: Message):
    """–û–±—Ä–∞–±–æ—Ç—á–∏–∫ –Ω–µ–∏–∑–≤–µ—Å—Ç–Ω—ã—Ö —Å–æ–æ–±—â–µ–Ω–∏–π"""
    user_text = message.text or ""
    logger.info(f"üî¥ –ù–µ–∏–∑–≤–µ—Å—Ç–Ω—ã–π —Ç–µ–∫—Å—Ç: '{user_text}' –æ—Ç {message.from_user.id}")
    
    if user_text.lower() in ['start', '—Å—Ç–∞—Ä—Ç', '–º–µ–Ω—é', 'menu']:
        await cmd_start(message)
    elif any(icon in user_text for icon in ['üìÑ', 'üìÅ', 'üí≥', '‚ÑπÔ∏è']):
        text = "üîÑ *–ë–æ—Ç –æ–±–Ω–æ–≤–ª–µ–Ω!*\n\n–û—Ç–ø—Ä–∞–≤—å—Ç–µ –∫–æ–º–∞–Ω–¥—É */start* —á—Ç–æ–±—ã —É–≤–∏–¥–µ—Ç—å –Ω–æ–≤–æ–µ –º–µ–Ω—é üëá"
        await message.answer(text, parse_mode="Markdown")
    else:
        text = "‚ùå *–ù–µ–∏–∑–≤–µ—Å—Ç–Ω–∞—è –∫–æ–º–∞–Ω–¥–∞*\n\n–û—Ç–ø—Ä–∞–≤—å—Ç–µ */start* –¥–ª—è –≥–ª–∞–≤–Ω–æ–≥–æ –º–µ–Ω—é"
        await message.answer(text, parse_mode="Markdown")
